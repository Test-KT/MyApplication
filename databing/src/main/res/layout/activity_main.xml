<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="user"
            type="com.lsl.databing.User"/>

        <variable
            name="handlesr"
            type="com.lsl.databing.handler"/>

        <import type="android.view.View"/>
    </data>


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lsl.databing.MainActivity">

    <TextView
        android:onClick="@{()->handlesr.showDP(user.name)}"
        android:text="@{user.name}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onCheckedChanged="@{(c,isCheck)->handlesr.showCheck(isCheck)}"
        android:onClick="@{(v)->handlesr.showIsVie(v.getVisibility()==View.VISIBLE)}"/>

    <include layout="@layout/ext_layout" bind:user="@{user}"/>
    <fragment
        android:id="@+id/fragment_bind"
        android:name="com.lsl.databing.DatabindingFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </fragment>

</LinearLayout>

</layout>
